<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/c1color</item>
    </style>

    <style name="AppTheme_Transition_Slide_Bottom" parent="AppTheme">
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/slide_from_bottom</item>
        <item name="android:windowExitTransition">@transition/slide_from_bottom</item>
        <item name="android:windowReenterTransition">@transition/slide_from_bottom</item>
        <item name="android:windowReturnTransition">@transition/slide_from_bottom</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
    </style>

</resources>
