<?xml version="1.0" encoding="utf-8"?>

<layout>
    <data>
        <variable
            name="data"
            type="com.ccee.videotool.model.entities.response.VideoListBean.VideoBean"/>
    </data>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dp15"
    android:paddingTop="@dimen/dp12"
    android:paddingRight="@dimen/dp15"
    android:paddingBottom="@dimen/dp12">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        app:cardCornerRadius="@dimen/dp4"
        app:cardElevation="@dimen/dp0">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/dp120"
            android:layout_height="@dimen/dp90"
            app:imgUrl="@{data.coverImgUrl}"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{data.title}"
            android:hint="未设置标题"
            android:textColor="@color/c2color"
            android:textSize="@dimen/s1textsize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp8"
            android:text='@{data.addTimeText+" · 时长 "+data.duration}'
            android:textColor="@color/c4color"
            android:textSize="@dimen/s6textsize" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:text="@{data.auditStatusText}"
            android:textColor="@color/c1color"
            android:textSize="@dimen/s4textsize"
            android:textStyle="bold" />


    </LinearLayout>


</LinearLayout>

</layout>