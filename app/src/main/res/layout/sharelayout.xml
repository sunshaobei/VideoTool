<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_gravity="bottom"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp10"
        app:cardCornerRadius="@dimen/dp10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/c7color"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/dp20">

                <RelativeLayout
                    android:id="@+id/wxsharelayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/wxshare"
                        android:layout_width="@dimen/dp30"
                        android:layout_height="@dimen/dp26"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/ic_share_wechat" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/wxshare"
                        android:layout_marginTop="@dimen/dp5"
                        android:gravity="center"
                        android:text="微信好友"
                        android:textColor="@color/c3color"
                        android:textSize="@dimen/s4textsize" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/wxfrendsharelayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/frendshare"
                        android:layout_width="@dimen/dp30"
                        android:layout_height="@dimen/dp26"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/ic_share_frend" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/frendshare"
                        android:layout_marginTop="@dimen/dp5"
                        android:gravity="center"
                        android:text="朋友圈"
                        android:textColor="@color/c3color"
                        android:textSize="@dimen/s4textsize" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/qqsharelayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/qqshare"
                        android:layout_width="@dimen/dp30"
                        android:layout_height="@dimen/dp26"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/ic_share_qq" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/qqshare"
                        android:layout_marginTop="@dimen/dp5"
                        android:gravity="center"
                        android:text="手机QQ"
                        android:textColor="@color/c3color"
                        android:textSize="@dimen/s4textsize" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/weibosharelayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/sinashare"
                        android:layout_width="@dimen/dp30"
                        android:layout_height="@dimen/dp26"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/ic_share_sina" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/sinashare"
                        android:layout_marginTop="@dimen/dp5"
                        android:gravity="center"
                        android:text="微博"
                        android:textColor="@color/c3color"
                        android:textSize="@dimen/s4textsize" />
                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp0_5"
                android:background="@color/c7color" />

            <TextView
                android:id="@+id/cancelview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp50"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/c1color"
                android:textSize="@dimen/s1textsize" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
