<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.fragment.VideoLibFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c7color"
        android:elevation="@dimen/dp3"
        android:orientation="vertical">

        <com.sunsh.baselibrary.widgets.StatusBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/relative_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp24"
            android:background="@color/c7color"
            android:clipChildren="false">

            <TextView
                android:id="@+id/tv_mine_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp15"
                android:text="我的视频 33"
                android:textColor="@color/c2color"
                android:textSize="@dimen/s8textsize"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/iv_mail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp15"
                    android:src="@mipmap/btn_mail" />

                <TextView
                    android:id="@+id/tv_msg_dot"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_alignTop="@+id/iv_mail"
                    android:layout_alignRight="@id/iv_mail"
                    android:layout_marginTop="-5dp"
                    android:layout_marginRight="-5dp"
                    android:background="@drawable/shape_solidc1_oval"
                    android:gravity="center"
                    android:maxLength="2"
                    android:text="2"
                    android:textColor="@color/c7color"
                    android:textSize="@dimen/s9textsize" />
            </RelativeLayout>


        </RelativeLayout>

        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp34"
            android:layout_marginTop="@dimen/dp20"
            android:layout_gravity="center_horizontal"
            android:background="@color/c7color"
            tl:tl_indicator_color="@color/c1color"
            tl:tl_indicator_corner_radius="@dimen/dp3"
            tl:tl_indicator_height="@dimen/dp2"
            tl:tl_indicator_width="@dimen/dp15"
            tl:tl_tab_space_equal="true"
            tl:tl_textBold="SELECT"
            tl:tl_textSelectColor="@color/c3color"
            tl:tl_textUnselectColor="@color/c4color"
            tl:tl_textsize="@dimen/s1textsize" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>