        <activity
            android:name="com.ccee.videotool.view.activity.ChooseArticlesActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_Transition_Slide_Bottom"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name="com.ccee.videotool.view.activity.UpLoadVideoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.ccee.videotool.view.activity.VideoPlayActivity"
            android:screenOrientation="portrait"
            android:theme="@style/FullScreen" />
        <activity
            android:name="com.ccee.videotool.view.activity.AgreementActivity"
            android:screenOrientation="portrait" />
