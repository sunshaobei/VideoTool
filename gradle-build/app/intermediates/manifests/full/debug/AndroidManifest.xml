            android:name="com.ccee.videotool.view.activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/FullScreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ccee.videotool.view.activity.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_Transition_Slide_Bottom" />
