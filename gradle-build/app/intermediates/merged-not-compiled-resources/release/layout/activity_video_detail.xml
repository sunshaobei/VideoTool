<?xml version="1.0" encoding="utf-8"?>
                                                            

    
                                          

                 
                       
                                                                                

           

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/c7color"
        android:orientation="vertical" android:tag="layout/activity_video_detail_0" xmlns:app="http://schemas.android.com/apk/res-auto">


        <com.sunsh.baselibrary.widgets.overscroll.OverScrollLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/c7color">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp211"
                        android:background="@color/black">

                        <ImageView
                            android:id="@+id/iv_cover"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:onClick="videoPlay"
                            android:scaleType="fitCenter"
                            android:tag="binding_1"       />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="?attr/selectableItemBackground"
                            android:onClick="videoPlay"
                            android:padding="@dimen/dp10"
                            android:src="@mipmap/btn_play" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/dp15"
                        android:animateLayoutChanges="true"
                        android:paddingTop="@dimen/dp20"
                        android:paddingRight="@dimen/dp15">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:tag="binding_2"     
                            android:hint="未设置标题"
                            android:textColor="@color/c2color"
                            android:textSize="@dimen/s10textsize"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp10"
                            android:tag="binding_3"       
                            android:textColor="@color/c4color"
                            android:textSize="@dimen/s6textsize" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp20"
                            android:hint="未设置详情"
                            android:lineSpacingExtra="@dimen/dp10"
                            android:tag="binding_4"           
                            android:textColor="@color/c3color"
                            android:textSize="@dimen/s2textsize" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp10"
                            android:layout_marginTop="@dimen/dp20"
                            android:background="@color/c6color" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp50"
                            android:animateLayoutChanges="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/video_classify"
                                android:textColor="@color/c4color"
                                android:textSize="@dimen/s3textsize" />

                            <TextView
                                android:id="@+id/tv_actegory"
                                android:layout_width="wrap_content"
                                android:hint="未设置分类"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp15"
                                android:tag="binding_5"             
                                android:textColor="@color/c2color"
                                android:textSize="@dimen/s3textsize" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp0_5"
                            android:background="@color/c5color" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp50"
                            android:animateLayoutChanges="true"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/selected_articles"
                                android:textColor="@color/c4color"
                                android:textSize="@dimen/s3textsize" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:hint="未设置相关选品文章"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp15"
                                android:tag="binding_6"                                                             
                                android:textColor="@color/c2color"
                                android:textSize="@dimen/s3textsize" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp0_5"
                            android:background="@color/c5color" />


                    </LinearLayout>
                </LinearLayout>


            </android.support.v4.widget.NestedScrollView>

        </com.sunsh.baselibrary.widgets.overscroll.OverScrollLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/c5color"
            android:layout_height="@dimen/dp0_5"/>
        <LinearLayout
            android:id="@+id/linear_bottom"
            android:layout_width="match_parent"
            android:background="@color/c7color"
            android:layout_height="@dimen/dp50"
           >

            <TextView
                android:layout_width="@dimen/dp0"
                android:layout_height="@dimen/dp50"
                android:layout_weight="1"
                android:onClick="delete"
                android:text="@string/delete"
                android:background="@color/c6color"
                android:gravity="center"
                android:textColor="@color/c3color"
                android:textSize="@dimen/s1textsize" />
            <View
                android:layout_width="@dimen/dp0_5"
                android:background="@color/c5color"
                android:tag="binding_7"                                          
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tv_center"
                android:layout_width="@dimen/dp0"
                android:layout_height="@dimen/dp50"
                android:onClick="share"
                android:layout_weight="1"
                android:tag="binding_8"                                          
                android:text="@string/share"
                                                                                         
                android:gravity="center"
                                                                                        
                android:textSize="@dimen/s1textsize" />

            <TextView
                android:onClick="reason"
                android:layout_width="@dimen/dp0"
                android:layout_height="@dimen/dp50"
                android:tag="binding_9"                                           
                android:layout_weight="1"
                android:text="查看原因"
                android:background="@color/c1color"
                android:gravity="center"
                android:textColor="@color/c7color"
                android:textSize="@dimen/s1textsize" />
        </LinearLayout>


    </LinearLayout>
         