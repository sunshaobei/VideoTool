<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/dp15"
    android:paddingTop="@dimen/dp25"
    android:paddingBottom="@dimen/dp25"
    android:paddingRight="@dimen/dp15"
    android:layout_height="wrap_content">

    <com.sunsh.baselibrary.widgets.SearchEditText
        android:layout_width="match_parent"
        android:id="@+id/edit"
        android:textSize="@dimen/s4textsize"
        android:textColor="@color/c2color"
        android:textColorHint="@color/c4color"
        android:layout_toStartOf="@id/tv_search"
        android:singleLine="true"
        android:hint="输入文章标题或内容"
        android:paddingLeft="@dimen/dp15"
        android:paddingRight="@dimen/dp15"
        android:background="@drawable/shape_solidc6_corner25_strokec5"
        android:layout_height="@dimen/dp35" />

    <TextView
        android:id="@+id/tv_search"
        android:layout_width="wrap_content"
        android:text="@string/search"
        android:layout_centerVertical="true"
        android:textColor="@color/c3color"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/s2textsize"
        android:layout_marginStart="@dimen/dp15"
        android:background="?attr/selectableItemBackground"
        android:layout_height="wrap_content" />

</RelativeLayout>