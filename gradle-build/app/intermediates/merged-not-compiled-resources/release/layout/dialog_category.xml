<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp320"
    android:layout_gravity="bottom"
    android:background="@drawable/shape_classify"
    android:orientation="horizontal">

    <com.sunsh.baselibrary.widgets.overscroll.OverScrollLayout
        android:layout_width="@dimen/dp120"
        android:id="@+id/overScrollLayout_menu1"
        android:layout_above="@+id/line_bottom"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_left"
            android:layout_width="match_parent"
            android:paddingTop="15dp"
            android:layout_height="match_parent" />

    </com.sunsh.baselibrary.widgets.overscroll.OverScrollLayout>

    <View
        android:id="@+id/line_center"
        android:layout_width="@dimen/dp0_5"
        android:layout_height="match_parent"
        android:background="@color/c5color"
        android:layout_above="@+id/line_bottom"
        android:layout_toEndOf="@+id/overScrollLayout_menu1" />

    <com.sunsh.baselibrary.widgets.overscroll.OverScrollLayout
        android:layout_width="match_parent"
        android:layout_above="@+id/line_bottom"
        android:layout_toEndOf="@+id/line_center"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/rv_right"
            android:paddingTop="@dimen/dp15"
            android:layout_height="match_parent" />

    </com.sunsh.baselibrary.widgets.overscroll.OverScrollLayout>



    <View
        android:id="@+id/line_bottom"
        android:layout_width="match_parent"
        android:background="@color/c5color"
        android:layout_above="@+id/tv_cancel"
        android:layout_height="@dimen/dp0_5"/>

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:textColor="@color/c1color"
        android:gravity="center"
        android:text="@string/cancle"
        android:textSize="@dimen/s1textsize"
        android:background="?attr/selectableItemBackground"
        android:layout_height="@dimen/dp50"
        android:layout_alignParentBottom="true" />


</RelativeLayout>